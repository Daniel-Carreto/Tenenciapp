<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.adroid.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardAuto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="45dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/city_car"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fondoTarjeta"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:background="@color/colorGrayTrans"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/txtMarca"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Marca"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtModelo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="modelo"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="62dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/txtMarca"
            android:layout_toEndOf="@id/txtMarca"
            android:layout_marginStart="62dp" />

        <TextView
            android:id="@+id/txtPlacas"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Placas"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />


    </RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>